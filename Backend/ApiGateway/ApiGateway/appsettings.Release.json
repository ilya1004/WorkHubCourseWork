{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "SecretKey": "my_secret_key_my_secret_key_my_secret_key_my_secret_key_my_secret_key",
    "Issuer": "IdentityService",
    "Audience": "WorkHubServices"
  },
  "Cors": {
    "AllowedOrigin": "http://localhost:4200"
  },
  "Logstash": {
    "Url": "http://logstash:5000"
  },
  "ReverseProxy": {
    "Routes": {
      "identity_service_auth": {
        "ClusterId": "identity_cluster",
        "Match": {
          "Path": "/identity-service/api/auth/{**catch-all}",
          "Methods" : [ "POST" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity-service"
          }
        ],
        "RateLimiterPolicy": "fixed"
      },
      "identity_service_employer_industries": {
        "ClusterId": "identity_cluster",
        "Match": {
          "Path": "/identity-service/api/employer-industries/{**catch-all}",
          "Methods" : [ "POST", "GET", "PUT", "DELETE" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity-service"
          }
        ],
        "RateLimiterPolicy": "fixed",
        "AuthorizationPolicy": "AuthenticatedOnly"
      },
      "identity_service_files": {
        "ClusterId": "identity_cluster",
        "Match": {
          "Path": "/identity-service/api/files/{**catch-all}",
          "Methods" : [ "GET" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity-service"
          }
        ],
        "RateLimiterPolicy": "fixed",
        "AuthorizationPolicy": "AuthenticatedOnly"
      },
      "identity_service_freelancer_skills": {
        "ClusterId": "identity_cluster",
        "Match": {
          "Path": "/identity-service/api/freelancer-skills/{**catch-all}",
          "Methods" : [ "POST", "GET", "PUT", "DELETE" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity-service"
          }
        ],
        "RateLimiterPolicy": "fixed",
        "AuthorizationPolicy": "AuthenticatedOnly"
      },
      "identity_service_users": {
        "ClusterId": "identity_cluster",
        "Match": {
          "Path": "/identity-service/api/users/{**catch-all}",
          "Methods" : [ "POST", "GET", "PUT", "DELETE" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity-service"
          }
        ],
        "RateLimiterPolicy": "fixed"
      },
      "projects_service": {
        "ClusterId": "projects_cluster",
        "Match": {
          "Path": "/projects-service/{**catch-all}",
          "Methods" : [ "POST", "GET", "PUT", "PATCH", "DELETE" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/projects-service"
          }
        ],
        "RateLimiterPolicy": "fixed",
        "AuthorizationPolicy": "AuthenticatedOnly"
      },
      "payments_service": {
        "ClusterId": "payments_cluster",
        "Match": {
          "Path": "/payments-service/{**catch-all}",
          "Methods" : [ "POST", "GET", "PUT", "PATCH", "DELETE" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/payments-service"
          }
        ],
        "RateLimiterPolicy": "fixed",
        "AuthorizationPolicy": "AuthenticatedOnly"
      },
      "chat_service": {
        "ClusterId": "chat_cluster",
        "Match": {
          "Path": "/chat-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/chat-service" },
          { "RequestHeader": "Connection", "Set": "upgrade" },
          { "RequestHeader": "Upgrade", "Set": "websocket" }
        ]
      },
      "identity_health": {
        "ClusterId": "identity_cluster",
        "Match": {
          "Path": "/identity-service/health",
          "Methods": ["GET"]
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity-service" }
        ]
      },
      "projects_health": {
        "ClusterId": "projects_cluster",
        "Match": {
          "Path": "/projects-service/health",
          "Methods": ["GET"]
        },
        "Transforms": [
          { "PathRemovePrefix": "/projects-service" }
        ]
      },
      "payments_health": {
        "ClusterId": "payments_cluster",
        "Match": {
          "Path": "/payments-service/health",
          "Methods": ["GET"]
        },
        "Transforms": [
          { "PathRemovePrefix": "/payments-service" }
        ]
      },
      "chat_health": {
        "ClusterId": "chat_cluster",
        "Match": {
          "Path": "/chat-service/health",
          "Methods": ["GET"]
        },
        "Transforms": [
          { "PathRemovePrefix": "/chat-service" }
        ]
      }
    },
    "Clusters": {
      "identity_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://workhub_identityservice:5080"
          }
        }
      },
      "projects_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://workhub_projectsservice:5081"
          }
        }
      },
      "chat_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://workhub_chatservice:5082"
          }
        }
      },
      "payments_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://workhub_paymentsservice:5083"
          }
        }
      }
    }
  }
}
